{
  "author": "WebThingsIO",
  "description": "Meross smart device adapter plugin for WebThings Gateway",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "python3 {path}/main.py",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/WebThingsIO/meross-adapter",
  "id": "meross-adapter",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "name": "Meross",
  "options": {
    "default": {
      "username": "",
      "password": ""
    },
    "schema": {
      "type": "object",
      "required": [
        "username",
        "password"
      ],
      "properties": {
        "username": {
          "type": "string",
          "description": "Meross app username"
        },
        "password": {
          "type": "string",
          "description": "Meross app password"
        }
      }
    }
  },
  "short_name": "Meross",
  "version": "0.4.2"
}
